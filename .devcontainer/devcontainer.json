{
    "name": "ProjectNext",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "prisma.prisma"
            ]
        }
    },
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
    ],
    "remoteEnv": {
        "PROJECT_ROOT": "${localWorkspaceFolder}"
    },
    "runArgs": ["--name", "pn-dev"]
}